@model IEnumerable<MvcDemo.Models.MovieDB>

@{
    ViewBag.Title = "Movies";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create", new object{}, new { @class="btn btn-primary"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Director)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Director)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>@Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-lg btn-info" })
            @Html.ActionLink("Edit", "Edit", new { id=item.ID},new { @class="btn btn-sm btn-warning" }) 
            @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-sm btn-danger" })
        </td>
    </tr>
}

</table>
